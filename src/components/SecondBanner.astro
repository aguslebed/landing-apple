---
const {title, image, altTextImage, description, button1, button2, backgroundColor, height} = Astro.props;
---
<div class={`relative h-[${height}] w-full bg-[${backgroundColor}] overflow-hidden`}
style={`height: ${height}; background-color: ${backgroundColor};`}
>
  <img 
    src={image.src}
    alt={altTextImage}
    class="object-cover scale-x-150 h-full w-full"
  />
  <div class="absolute inset-0 top-20 flex flex-col items-center justify-start text-center text-black">
    <h2 class="text-5xl mb-4 font-bold">{title}</h2>
    <p class="text-2xl mb-4 whitespace-pre-line">{description}</p>
    <div class="buttons flex gap-4">
      <button class="bg-[#0071e3] cursor-pointer text-white py-2 px-8 rounded-full transition-colors">
        {button1}
      </button>
      <button class="cursor-pointer text-[#0071e3] py-2 px-6 rounded-full transition-colors border border-[#0071e3] hover:bg-[#0071e3] hover:text-white">
        {button2}
      </button>
    </div>
  </div>
</div>