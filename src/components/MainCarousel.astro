---
import Image1 from "../../public/Carousel/1.jpg";
import Image2 from "../../public/Carousel/2.jpg";
import Image3 from "../../public/Carousel/3.jpg";
import Image4 from "../../public/Carousel/4.jpg";
import Image5 from "../../public/Carousel/5.jpg";
import Image6 from "../../public/Carousel/6.jpg";
import Image7 from "../../public/Carousel/7.jpg";
import Image8 from "../../public/Carousel/8.jpg";
import Image9 from "../../public/Carousel/9.jpg";
import Image10 from "../../public/Carousel/10.jpg";
---

<div
  id="infinite-loop is-center"
  data-carousel='{ "loadingClasses": "opacity-0", "isCentered": true, "isInfiniteLoop": true, "slidesQty": { "xs": 1, "lg": 2 } }'
  class="relative w-full"
>
  <div class="carousel h-full">
    <div class="carousel-body h-full opacity-0">
      <!-- Slide 1 -->
      <div class="carousel-slide px-1">
        <div class="flex h-full justify-center p-6">
          <img src={Image1.src} alt="" class="object-cover w-full h-full" />
        </div>
      </div>
      <!-- Slide 2 -->
      <div class="carousel-slide px-1">
        <div class="flex h-full justify-center p-6">
          <img src={Image2.src} alt="" class="object-cover w-full h-full" />
        </div>
      </div>
      <!-- Slide 3 -->
      <div class="carousel-slide px-1">
        <div class="flex h-full justify-center p-6">
          <img src={Image3.src} alt="" class="object-cover w-full h-full" />
        </div>
      </div>
      <!-- Slide 4 -->
      <div class="carousel-slide px-1">
        <div class="flex h-full justify-center p-6">
          <img src={Image4.src} alt="" class="object-cover w-full h-full" />
        </div>
      </div>
      <!-- Slide 5 -->
      <div class="carousel-slide px-1">
        <div class="flex h-full justify-center p-6">
          <img src={Image5.src} alt="" class="object-cover w-full h-full" />
        </div>
      </div>
      <!-- Slide 6 -->
      <div class="carousel-slide px-1">
        <div class="flex h-full justify-center p-6">
          <img src={Image6.src} alt="" class="object-cover w-full h-full" />
        </div>
      </div>
      <!-- Slide 7 -->
      <div class="carousel-slide px-1">
        <div class="flex h-full justify-center p-6">
          <img src={Image7.src} alt="" class="object-cover w-full h-full" />
        </div>
      </div>
      <!-- Slide 8 -->
      <div class="carousel-slide px-1">
        <div class="flex h-full justify-center p-6">
          <img src={Image8.src} alt="" class="object-cover w-full h-full" />
        </div>
      </div>
      <!-- Slide 9 -->
      <div class="carousel-slide px-1">
        <div class="flex h-full justify-center p-6">
          <img src={Image9.src} alt="" class="object-cover w-full h-full" />
        </div>
      </div>
      <!-- Slide 10 -->
      <div class="carousel-slide px-1">
        <div class="flex h-full justify-center p-6">
          <img src={Image10.src} alt="" class="object-cover w-full h-full" />
        </div>
      </div>
    </div>
  </div>

  <!-- Previous Slide -->
  <button
    type="button"
    class="carousel-prev start-5 max-sm:start-3 carousel-disabled:opacity-50 size-9.5 bg-base-100 flex items-center justify-center rounded-full shadow-base-300/20 shadow-sm"
  >
    <span class="icon-[tabler--chevron-left] size-5 cursor-pointer"></span>
    <span class="sr-only">Previous</span>
  </button>
  <!-- Next Slide -->
  <button
    type="button"
    class="carousel-next end-5 max-sm:end-3 carousel-disabled:opacity-50 size-9.5 bg-base-100 flex items-center justify-center rounded-full shadow-base-300/20 shadow-sm"
  >
    <span class="icon-[tabler--chevron-right] size-5"></span>
    <span class="sr-only">Next</span>
  </button>
</div>
